{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Static Library)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/build.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "if exist objdir rmdir /s /q objdir"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Generate VS Project",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist objdir mkdir objdir && cd objdir && python ../configure.py --gen=vs --vs-version 18"
      ],
      "problemMatcher": []
    }
  ]
}
