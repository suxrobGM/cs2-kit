# Clang-Format Configuration for Admin System
# Based on Google style with Allman braces and 4-space indent

Language: Cpp
BasedOnStyle: Google

# Indentation
IndentWidth: 4
TabWidth: 4
IndentCaseLabels: false
AccessModifierOffset: -4

# Braces (Allman-like with compact empty bodies)
BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: true
  AfterClass: true
  AfterControlStatement: Always
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  BeforeLambdaBody: false
  BeforeWhile: true
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false

# Line breaking
ColumnLimit: 120
AllowShortBlocksOnASingleLine: Empty
AllowShortFunctionsOnASingleLine: Inline
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false

# Alignment
AlignConsecutiveMacros: true
AlignOperands: Align

# Spaces
SpacesInContainerLiterals: false

# Includes
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"'
    Priority: 1
  - Regex: '^<(ISmmPlugin|igameevents|iplayerinfo|sh_)'
    Priority: 2
  - Regex: '^<'
    Priority: 3

# Pointer alignment
DerivePointerAlignment: false
PointerAlignment: Left
